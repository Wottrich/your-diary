<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arenic_1"
    tools:context=".view.activity.order.RegisterOrderActivity">


    <android.support.v7.widget.Toolbar
        android:background="@color/arenic"
        app:navigationIcon="@drawable/arrow_back_white_24"
        android:id="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

        <android.support.v4.widget.NestedScrollView
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:fontFamily="@font/roboto_bold"
                    android:id="@+id/etTitle"
                    style="@style/LabelTitle.White"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/transparent"
                    android:hint="@string/activity_register_order_title"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAllCaps="false"
                    android:textColorHint="@color/dark_white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Texto ae" />

                <EditText
                    android:fontFamily="@font/roboto_bold"
                    android:id="@+id/etAmount"
                    style="@style/Label.ShinyShamrock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/transparent"
                    android:hint="@string/activity_register_order_amount"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAllCaps="false"
                    android:textColorHint="@color/dark_white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etTitle"
                    tools:text="R$ 2.000,00" />

                <Button
                    android:fontFamily="@font/roboto_bold"
                    android:id="@+id/btnDate"
                    style="@style/Label.White"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/transparent"
                    android:hint="@string/activity_register_order_date"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColorHint="@color/dark_white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAmount"
                    tools:text="20/12/1999" />

                <EditText
                    android:textColorHint="@color/dark_white"
                    android:hint="@string/activity_register_order_description"
                    android:id="@+id/etDescription"
                    style="@style/Label.White"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/roboto"
                    android:inputType="textMultiLine"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnDate"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras id ullamcorper velit, ac egestas nibh. In vehicula quam lectus, vitae facilisis lorem tristique a. Sed pulvinar fermentum nunc, sed pellentesque neque fringilla eget. Pellentesque at ex blandit, malesuada nunc id, suscipit nisl. Pellentesque vulputate, metus nec feugiat venenatis, libero nunc convallis velit, et tempor turpis magna at arcu. Nam eu cursus mi. Suspendisse aliquet mattis tempus. Duis arcu odio, luctus sit amet enim eu, tristique pharetra felis. Duis ut velit sapien. Proin ut orci ac lorem posuere suscipit. Phasellus hendrerit rhoncus massa nec malesuada. " />

            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>