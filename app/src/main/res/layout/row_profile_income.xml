<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_row_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/linked_email_view_holder_email_null"
            style="@style/RobotoBoldWhite"
            android:id="@+id/tvLinkedEmail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="@string/income_view_holder_info"
            style="@style/RobotoBoldWhite"
            android:id="@+id/info"
            app:layout_constraintTop_toBottomOf="@id/tvLinkedEmail"
            app:layout_constraintEnd_toStartOf="@id/tvIncome"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@id/info"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="R$ 1.800,00"
            style="@style/RobotoBoldShinyShamrock"
            android:id="@+id/tvIncome"
            app:layout_constraintTop_toBottomOf="@id/tvLinkedEmail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>