<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp">

    <TextView
        app:layout_constraintEnd_toStartOf="@id/tvCountOrder"
        android:layout_marginTop="10dp"
        android:id="@+id/tvNameCustomer"
        style="@style/RobotoBoldWhite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/tvPriceOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CafÃ© mania" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/tvNameCustomer"
        android:id="@+id/tvCountOrder"
        style="@style/RobotoBoldWebOrange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@id/tvDateLastOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0 pedidos" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/tvPriceOrder"
        android:id="@+id/tvDateLastOrder"
        style="@style/RobotoBoldWebOrange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCountOrder"
        tools:text="20/12/1999" />

    <TextView
        app:layout_constraintEnd_toStartOf="@id/tvDateLastOrder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tvPriceOrder"
        style="@style/RobotoBoldShinyShamrock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameCustomer"
        tools:text="R$ 100,50" />

    <View

        style="@style/Divider"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>