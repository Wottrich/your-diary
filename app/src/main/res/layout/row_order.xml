<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shape_row_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_marginTop="10dp"
            android:id="@+id/clInfoOrder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDateOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="visible"
                android:id="@+id/tvTitle"
                style="@style/LabelTitle.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Camisetas do time lá da pqp de sao sépe da merda" />

            <TextView
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tvPriceOrder"
                style="@style/Label.ShinyShamrock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingStart="0dp"
                android:paddingEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="R$1.432.423.434.345,00" />

        </android.support.constraint.ConstraintLayout>



        <TextView
            app:layout_constraintBottom_toBottomOf="@id/clInfoOrder"
            app:layout_constraintStart_toEndOf="@id/clInfoOrder"
            android:id="@+id/tvDateOrder"
            style="@style/LabelTitle.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_bold"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12/04/2019" />


        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto"
            style="@style/Label.White"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras id ullamcorper velit, ac egestas nibh. In vehicula quam lectus, vitae facilisis lorem tristique a. Sed pulvinar fermentum nunc, sed pellentesque neque fringilla eget. Pellentesque at ex blandit, malesuada nunc id, suscipit nisl. Pellentesque vulputate, metus nec feugiat venenatis, libero nunc convallis velit, et tempor turpis magna at arcu. Nam eu cursus mi. Suspendisse aliquet mattis tempus. Duis arcu odio, luctus sit amet enim eu, tristique pharetra felis. Duis ut velit sapien. Proin ut orci ac lorem posuere suscipit. Phasellus hendrerit rhoncus massa nec malesuada."
            android:id="@+id/tvDescription"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/clInfoOrder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>