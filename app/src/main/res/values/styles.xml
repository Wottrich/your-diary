<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LabelTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LabelTitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LabelTitle.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LabelTitle.LightBlue">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="LabelTitle.WebOrange">
        <item name="android:textColor">@color/web_orange</item>
    </style>

    <style name="Label">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Label.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Label.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Label.LightBlack">
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="Label.VividBlue">
        <item name="android:textColor">@color/vivid_blue</item>
    </style>

    <style name="Label.ShinyShamrock">
        <item name="android:textColor">@color/shiny_shamrock</item>
    </style>

    <style name="Label.WebOrange">
        <item name="android:textColor">@color/web_orange</item>
    </style>

    <!--<editor-folder defaultstate="Collapsed" desc="Custom Label"-->
    <style name="CustomLabel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomLabel.Roboto">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CustomLabel.RobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CustomLabel.RobotoSlab">
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

    <style name="RobotoWhite" parent="CustomLabel.Roboto">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RobotoWebOrange" parent="CustomLabel.Roboto">
        <item name="android:textColor">@color/web_orange</item>
    </style>

    <style name="RobotoBoldWebOrange" parent="CustomLabel.RobotoBold">
        <item name="android:textColor">@color/web_orange</item>
    </style>

    <style name="RobotoBoldWhite" parent="CustomLabel.RobotoBold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RobotoSlabWhite" parent="CustomLabel.RobotoSlab">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RobotoDarkWhite2" parent="CustomLabel.Roboto">
        <item name="android:textColor">@color/dark_white_2</item>
    </style>

    <style name="RobotoBoldDarkWhite2" parent="CustomLabel.RobotoBold">
        <item name="android:textColor">@color/dark_white_2</item>
    </style>

    <style name="RobotoSlabDarkWhite2" parent="CustomLabel.RobotoSlab">
        <item name="android:textColor">@color/dark_white_2</item>
    </style>

    <style name="RobotoBlack" parent="CustomLabel.RobotoSlab">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RobotoShinyShamrock" parent="CustomLabel.Roboto">
        <item name="android:textColor">@color/shiny_shamrock</item>
    </style>

    <style name="RobotoBoldShinyShamrock" parent="CustomLabel.RobotoBold">
        <item name="android:textColor">@color/shiny_shamrock</item>
    </style>
    <!--</editor-folder>-->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="EditText.Form">
        <item name="android:background">@drawable/shape_form_edittext</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Button.Register">
        <item name="android:background">@drawable/shape_button_register</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Delete">
        <item name="android:background">@drawable/shape_button_delete</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Yellow">
        <item name="android:background">@drawable/shape_button_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/shape_button_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="SmallButton.Yellow">
        <item name="android:background">@drawable/shape_button_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
